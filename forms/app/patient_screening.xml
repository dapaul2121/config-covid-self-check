        <input ref="/patient_screening/inputs/contact/external_id">
          <label ref="jr:itext('/patient_screening/inputs/contact/external_id:label')"/>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/patient_screening/symptoms_group">
      <label ref="jr:itext('/patient_screening/symptoms_group:label')"/>
      <select1 ref="/patient_screening/symptoms_group/signal_1">
        <label ref="jr:itext('/patient_screening/symptoms_group/signal_1:label')"/>
        <item>
          <label ref="jr:itext('/patient_screening/symptoms_group/signal_1/yes:label')"/>
