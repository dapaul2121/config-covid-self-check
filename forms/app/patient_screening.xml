      <instance>
        <patient_screening delimiter="#" id="patient_screening" prefix="J1!patient_screening!" version="2020-03-25 2-25">
          <inputs tag="hidden">
            <source>user</source>
            <source_id/>
            <user/>
            <contact>
              <_id/>
              <name/>
              <date_of_birth/>
              <sex/>
              <external_id/>
            </contact>
          </inputs>
          <patient_id tag="hidden"/>
          <has_symptoms tag="hidden"/>
          <symptoms_group tag="hidden">
            <signal_1/>
            <symptoms/>
            <generated_note_name_21/>
          </symptoms_group>
          <summary-group>
            <yes_symptoms/>
            <negative_result/>
            <style/>
          </summary-group>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </patient_screening>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/patient_screening/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/patient_screening/inputs/source" type="string"/>
      <bind nodeset="/patient_screening/inputs/source_id" type="string"/>
      <bind nodeset="/patient_screening/inputs/contact/_id" type="string"/>
      <bind nodeset="/patient_screening/inputs/contact/name" type="string"/>
      <bind nodeset="/patient_screening/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/patient_screening/inputs/contact/sex" type="string"/>
      <bind nodeset="/patient_screening/inputs/contact/external_id" type="int"/>
      <bind calculate="../inputs/contact/_id" jr:requiredMsg="jr:itext('/patient_screening/patient_id:jr:requiredMsg')" nodeset="/patient_screening/patient_id" required="true()" type="string"/>
      <bind calculate="if( /patient_screening/symptoms_group/symptoms ,'true','false')" jr:requiredMsg="jr:itext('/patient_screening/has_symptoms:jr:requiredMsg')" nodeset="/patient_screening/has_symptoms" required="true()" type="string"/>
      <bind nodeset="/patient_screening/symptoms_group/signal_1" type="select1"/>
      <bind nodeset="/patient_screening/symptoms_group/symptoms" type="select"/>
      <bind nodeset="/patient_screening/symptoms_group/generated_note_name_21" readonly="true()" type="string"/>
      <bind nodeset="/patient_screening/summary-group/yes_symptoms" readonly="true()" relevant=" /patient_screening/has_symptoms ='true'" type="string"/>
      <bind nodeset="/patient_screening/summary-group/negative_result" readonly="true()" relevant=" /patient_screening/has_symptoms ='false'" type="string"/>
      <bind nodeset="/patient_screening/summary-group/style" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/patient_screening/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/patient_screening/inputs">
      <label ref="jr:itext('/patient_screening/inputs:label')"/>
