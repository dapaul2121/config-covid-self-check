        <item>
          <label ref="jr:itext('/patient_screening/symptoms_group/symptoms/fever:label')"/>
          <value>fever</value>
        </item>
        <item>
          <label ref="jr:itext('/patient_screening/symptoms_group/symptoms/cough:label')"/>
          <value>cough</value>
        </item>
        <item>
          <label ref="jr:itext('/patient_screening/symptoms_group/symptoms/breathing:label')"/>
          <value>breathing</value>
        </item>
        <item>
          <label ref="jr:itext('/patient_screening/symptoms_group/symptoms/sore_throat:label')"/>
          <value>sore_throat</value>
        </item>
      </select>
      <input ref="/patient_screening/symptoms_group/generated_note_name_21">
        <label ref="jr:itext('/patient_screening/symptoms_group/generated_note_name_21:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/patient_screening/summary-group">
      <label ref="jr:itext('/patient_screening/summary-group:label')"/>
      <input ref="/patient_screening/summary-group/yes_symptoms">
        <label ref="jr:itext('/patient_screening/summary-group/yes_symptoms:label')"/>
      </input>
      <input ref="/patient_screening/summary-group/negative_result">
        <label ref="jr:itext('/patient_screening/summary-group/negative_result:label')"/>
      </input>
      <input ref="/patient_screening/summary-group/style">
        <label ref="jr:itext('/patient_screening/summary-group/style:label')"/>
      </input>
    </group>
