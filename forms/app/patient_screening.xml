        <label ref="jr:itext('/patient_screening/inputs/source:label')"/>
      </input>
      <input appearance="hidden" ref="/patient_screening/inputs/source_id">
        <label ref="jr:itext('/patient_screening/inputs/source_id:label')"/>
      </input>
      <group ref="/patient_screening/inputs/user">
        <label ref="jr:itext('/patient_screening/inputs/user:label')"/>
      </group>
      <group ref="/patient_screening/inputs/contact">
        <label ref="jr:itext('/patient_screening/inputs/contact:label')"/>
        <input appearance="hidden" ref="/patient_screening/inputs/contact/_id">
          <label ref="jr:itext('/patient_screening/inputs/contact/_id:label')"/>
        </input>
        <input appearance="hidden" ref="/patient_screening/inputs/contact/name">
